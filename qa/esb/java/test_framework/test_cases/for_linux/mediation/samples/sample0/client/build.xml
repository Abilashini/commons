<project name="Sample0" default="run.client">
 
    <property name="base.dir" value="${project.base.dir}/mediation/samples/sample0/client"/>
    <property name="build.dir" value="${base.dir}/build"/>
    
    <property name="src" value="${base.dir}/src"/>
    <property name="target" value="${base.dir}/target"/>
    <property name="target.java" value="${target}/src"/>
    <property name="target.classes" value="${target}/classes"/>
    <property name="ESB_HOME" value="${esb.envt.ESB_HOME}"/>
    <property name="endpoint" value="http://${esb.envt.hostname}:${esb.envt.httpport}/services"/>
    <property name="addurl" value="http://${esb.envt.hostname}:${esb.envt.http_listnerport}/services/${esb.envt.service1_name}"/>

    <!--Copy the synapse.xml to ESB_HOME/webapp/WEB-INF/classes/conf-->
    <target name="copy_synapse_xml">
        <delete file="${ESB_HOME}/conf/synapse.xml"/>
        <copy file="${build.dir}/../../config/synapse_sample_0.xml" tofile="${ESB_HOME}/conf/synapse.xml" overwrite="true"/>
    </target>	
 
    <!--Shutting down the WSO2 ESB Server-->
    <target name="start_synapse_server" depends="copy_synapse_xml">
        <exec dir="${ESB_HOME}/bin" executable="wso2server.sh" spawn="true">
            <arg value="console"/>
       </exec> 
    </target>
           
    <target name="run.client" depends="clean">

        <delete dir="${target}"/>
        <mkdir dir="${target}\classes"/>
        <!-- Compile the client -->
        
        <javac debug="on" memoryMaximumSize="256m" memoryInitialSize="256m" fork="true"
               destdir="${target}/classes">
            <src path="${base.dir}/src"/>
            <classpath>
                <fileset dir="${ESB_HOME}/repository/lib">
                    <include name="*.jar"/>
                </fileset>
                <!--fileset dir="${target}">
                    <include name="*.jar"/>
                </fileset-->
                <fileset dir="${ESB_HOME}/lib/endorsed">
                    <include name="*.*"/>
                </fileset>
            </classpath>
        </javac>
        
         <!--jar the compiled stuff-->
        <jar destfile="${target}/Sample0Client.jar">
            <fileset dir="${target}/classes">
                <!--exclude name="**/META-INF/*.*"/-->
            </fileset>
        </jar>
        
        <java classname="org.wso2.esb.client.Sample0Client" fork="true">
            <arg value="${addurl}"/>
            <classpath>
                <fileset dir="${ESB_HOME}/repository/lib">
                    <include name="*.jar"/>
                </fileset>
                <fileset dir="${target}">
                    <include name="*.jar"/>
                </fileset>
                <fileset dir="${ESB_HOME}/lib/endorsed">
                    <include name="*.*"/>
                </fileset>
            </classpath>
        </java>

       <!--Shutting down the WSO2 ESB Server-->
       <exec dir="${ESB_HOME}/bin" executable="daemon.sh" spawn="false">
            <arg value="stop"/>
       </exec>
    </target>

   <target name="clean">
        <delete dir="${base.dir}/target"/>
    </target>

</project>
