<project name="Poxclient" default="run.client">

    <property environment="env"/>
    
    <property name="base.dir" value="${project.base.dir}/pojo/echo/client"/>
    <property name="build.dir" value="${base.dir}/build"/>
    
    <property name="src" value="${base.dir}/src"/>
    <property name="target" value="${base.dir}/target"/>
    <property name="target.java" value="${target}/src"/>
    <property name="target.classes" value="${target}/classes"/>
             
         
    <target name="run.client" depends="clean">
        <delete dir="${target}"/>
        <mkdir dir="${target}\classes"/>
        <!-- Compile the client -->
        
        <javac debug="on" memoryMaximumSize="256m" memoryInitialSize="256m" fork="true"
               destdir="${target}/classes">
            <src path="${base.dir}/src"/>
            <classpath>
                <fileset dir="${wsas.envt.WSAS_HOME}\lib">
                    <include name="*.jar"/>
                </fileset>
                <fileset dir="${target}">
                    <include name="*.jar"/>
                </fileset>
                <fileset dir="${wsas.envt.WSAS_HOME}\lib\endorsed">
                    <include name="*.*"/>
                </fileset>
            </classpath>
        </javac>
        
         <!--jar the compiled stuff-->
        <jar destfile="${target}/AddService-client.jar">
            <fileset dir="${target}/classes">
                <!--exclude name="**/META-INF/*.*"/-->
            </fileset>
        </jar>
        
        <java classname="org.wso2.wsas.client.AddPoxClient">
            <classpath>
                <fileset dir="${wsas.envt.WSAS_HOME}\lib">
                    <include name="*.jar"/>
                </fileset>
                <fileset dir="${target}">
                    <include name="*.jar"/>
                </fileset>
                <fileset dir="${wsas.envt.WSAS_HOME}\lib\endorsed">
                    <include name="*.*"/>
                </fileset>
            </classpath>
        </java>
    </target>

   <target name="clean">
        <delete dir="${base.dir}/target"/>
    </target>

</project>
