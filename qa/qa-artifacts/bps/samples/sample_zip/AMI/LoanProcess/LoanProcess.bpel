<?xml version="1.0" encoding="UTF-8"?>
<process
    name="LoanProcess"
    targetNamespace="http://wso2.org/bps/samples/LoanProcess"
    xmlns="http://docs.oasis-open.org/wsbpel/2.0/process/executable"
    xmlns:xsd="http://www.w3.org/2001/XMLSchema"
    xmlns:sxt="http://www.sun.com/wsbpel/2.0/process/executable/SUNExtension/Trace" 
    xmlns:sxed="http://www.sun.com/wsbpel/2.0/process/executable/SUNExtension/Editor"
    xmlns:tns="http://wso2.org/bps/samples/LoanProcess" 
    xmlns:ns0="http://wso2.org/bps/samples/CreditRating"
    xmlns:ns1="http://wso2.org/bps/samples/CustomerInfo"
    xmlns:ns2="http://wso2.org/bps/samples/LoanService"
    xmlns:ns3="http://wso2.org/bps/samples/loan_process/schema">

    <import namespace="http://wso2.org/bps/samples/LoanProcess" location="LoanProcess.wsdl" importType="http://schemas.xmlsoap.org/wsdl/"/>
    <import namespace="http://wso2.org/bps/samples/CreditRating" location="CreditRating.wsdl" importType="http://schemas.xmlsoap.org/wsdl/"/>
    <import namespace="http://wso2.org/bps/samples/CustomerInfo" location="CustomerInfo.wsdl" importType="http://schemas.xmlsoap.org/wsdl/"/>
    <import namespace="http://wso2.org/bps/samples/LoanService" location="LoanService.wsdl" importType="http://schemas.xmlsoap.org/wsdl/"/>
    
    <partnerLinks>
        <partnerLink name="Client" partnerLinkType="tns:LoanProcess" myRole="LoanProcessPortTypeRole"/>
        <partnerLink name="CreditRatingPL" partnerLinkType="ns0:CreditRating" partnerRole="CreditRatingService"/>
        <partnerLink name="CustomerInfoPL" partnerLinkType="ns1:CustomerInfo" partnerRole="CustomerInfoPortTypeRole"/>
        <partnerLink name="DILoanServicePL" partnerLinkType="ns2:LoanServicePT" partnerRole="LoanServiceRole" myRole="LoanServiceClientRole"/>
        <partnerLink name="XKLoanServicePL" partnerLinkType="ns2:LoanServicePT" partnerRole="LoanServiceRole" myRole="LoanServiceClientRole"/>
    </partnerLinks>
    <variables>
        <variable name="output" messageType="tns:laonRequestResponse"/>
        <variable name="input" messageType="tns:laonRequestRequest"/>
        <variable name="creditRatingInput" messageType="ns0:getCreditRatingRequest"/>
        <variable name="creditRatingOutput" messageType="ns0:getCreditRatingResponse"/>
        <variable name="customerInfoInput" messageType="ns1:getCustomerSSNRequest"/>
        <variable name="customerInfoOutput" messageType="ns1:getCustomerSSNResponse"/>
        <variable name="diLoanServiceRequest" messageType="ns2:getLoanOfferRequest"/>
        <variable name="diLoanServiceResponse" messageType="ns2:getLoanOfferResponse"/>
        <variable name="xkLoanServiceRequest" messageType="ns2:getLoanOfferRequest"/>
        <variable name="xkLoanServiceResponse" messageType="ns2:getLoanOfferResponse"/>
    </variables>
    <correlationSets>
        <correlationSet name="correlator" properties="tns:correlatorProp"/>
    </correlationSets>
    <sequence>
        <receive name="ReceiveLoanRequest" createInstance="yes" partnerLink="Client" operation="laonRequest" portType="tns:LoanProcessPortType" variable="input">
            <correlations>
                <correlation set="correlator" initiate="yes"></correlation>
            </correlations>
        </receive>
        <assign name="Assign1">
            <copy>
                <from>
                    <literal>
                        <ns3:CustomerInfo>
                            <ns3:Name></ns3:Name>
                            <ns3:Email></ns3:Email>
                            <ns3:CustomerID></ns3:CustomerID>
                            <ns3:CreditRating></ns3:CreditRating>
                        </ns3:CustomerInfo>
                    </literal>
                </from>
                <to>$customerInfoInput.part</to>
            </copy>
            <copy>
                <from>$input.part/ns3:CustomerInfo/ns3:Name</from>
                <to>$customerInfoInput.part/ns3:Name</to>
            </copy>
            <copy>
                <from>$input.part/ns3:CustomerInfo/ns3:Email</from>
                <to>$customerInfoInput.part/ns3:Email</to>
            </copy>
            <copy>
                <from>$input.part/ns3:CustomerInfo/ns3:CustomerID</from>
                <to>$customerInfoInput.part/ns3:CustomerID</to>
            </copy>
            <copy>
                <from>$input.part/ns3:CustomerInfo/ns3:CreditRating</from>
                <to>$customerInfoInput.part/ns3:CreditRating</to>
            </copy>
        </assign>
        <invoke name="InvokeCustomerInfo" partnerLink="CustomerInfoPL" operation="getCustomerSSN" portType="ns1:CustomerInfoPortType" inputVariable="customerInfoInput" outputVariable="customerInfoOutput"/>
        <assign name="Assign2">
            <copy>
                <from>
                    <literal>
                        <ns3:CustomerSSN>
                            <ns3:SSN></ns3:SSN>
                        </ns3:CustomerSSN>
                    </literal>
                </from>
                <to>$creditRatingInput.part</to>
            </copy>
            <copy>
                <from>$customerInfoOutput.part/ns3:SSN</from>
                <to>$creditRatingInput.part/ns3:SSN</to>
            </copy>
        </assign>
        <invoke name="InvokeCreditRating" partnerLink="CreditRatingPL" operation="getCreditRating" portType="ns0:CreditRatingPortType" inputVariable="creditRatingInput" outputVariable="creditRatingOutput"/>
        <assign name="Assign3">
            <copy>
                <from>
                    <literal>
                        <ns3:LoanRequest>
                            <ns3:CustomerInfo>
                                <ns3:Name></ns3:Name>
                                <ns3:Email></ns3:Email>
                                <ns3:CustomerID></ns3:CustomerID>
                                <ns3:CreditRating></ns3:CreditRating>
                            </ns3:CustomerInfo>
                            <ns3:LoanInfo>
                                <ns3:Amount></ns3:Amount>
                                <ns3:Years></ns3:Years>
                            </ns3:LoanInfo>
                        </ns3:LoanRequest>
                    </literal>
                </from>
                <to>$diLoanServiceRequest.part</to>
            </copy>
            <copy>
                <from>
                    <literal>
                        <ns3:LoanRequest>
                            <ns3:CustomerInfo>
                                <ns3:Name></ns3:Name>
                                <ns3:Email></ns3:Email>
                                <ns3:CustomerID></ns3:CustomerID>
                                <ns3:CreditRating></ns3:CreditRating>
                            </ns3:CustomerInfo>
                            <ns3:LoanInfo>
                                <ns3:Amount></ns3:Amount>
                                <ns3:Years></ns3:Years>
                            </ns3:LoanInfo>
                        </ns3:LoanRequest>
                    </literal>
                </from>
                <to>$xkLoanServiceRequest.part</to>
            </copy>
            <copy>
                <from>$creditRatingOutput.part/ns3:rating</from>
                <to>$diLoanServiceRequest.part/ns3:CustomerInfo/ns3:CreditRating</to>
            </copy>
            <copy>
                <from>$input.part/ns3:CustomerInfo/ns3:Name</from>
                <to>$diLoanServiceRequest.part/ns3:CustomerInfo/ns3:Name</to>
            </copy>
            <copy>
                <from>$input.part/ns3:CustomerInfo/ns3:Email</from>
                <to>$diLoanServiceRequest.part/ns3:CustomerInfo/ns3:Email</to>
            </copy>
            <copy>
                <from>$input.part/ns3:CustomerInfo/ns3:CustomerID</from>
                <to>$diLoanServiceRequest.part/ns3:CustomerInfo/ns3:CustomerID</to>
            </copy>
            <copy>
                <from>$input.part/ns3:LoanInfo</from>
                <to>$diLoanServiceRequest.part/ns3:LoanInfo</to>
            </copy>
            <copy>
                <from>$creditRatingOutput.part/ns3:rating</from>
                <to>$xkLoanServiceRequest.part/ns3:CustomerInfo/ns3:CreditRating</to>
            </copy>
            <copy>
                <from>$input.part/ns3:CustomerInfo/ns3:Name</from>
                <to>$xkLoanServiceRequest.part/ns3:CustomerInfo/ns3:Name</to>
            </copy>
            <copy>
                <from>$input.part/ns3:CustomerInfo/ns3:Email</from>
                <to>$xkLoanServiceRequest.part/ns3:CustomerInfo/ns3:Email</to>
            </copy>
            <copy>
                <from>$input.part/ns3:CustomerInfo/ns3:CustomerID</from>
                <to>$xkLoanServiceRequest.part/ns3:CustomerInfo/ns3:CustomerID</to>
            </copy>
            <copy>
                <from>$input.part/ns3:LoanInfo</from>
                <to>$xkLoanServiceRequest.part/ns3:LoanInfo</to>
            </copy>
        </assign>
        <flow name="LoanOfferFlow">
            <sequence name="Sequence1">
                <invoke name="Invoke" partnerLink="DILoanServicePL" operation="getLoanOffer" portType="ns2:LoanServicePortType" inputVariable="diLoanServiceRequest"/>
                <receive name="ReceiveDILoanService" createInstance="no" partnerLink="DILoanServicePL" operation="onLoanOffer" portType="ns2:LoanServiceCallbackPortType" variable="diLoanServiceResponse">
                    <correlations>
                        <correlation set="correlator" initiate="no"></correlation>
                    </correlations>
                </receive>
			</sequence>
			<!-- Commented due to issue with ODE engine. Alpha release will go with partial sample due to a bug in ODE. -->
            <!--sequence name="Sequence2">
                <invoke name="InvokeXKLoanService" partnerLink="XKLoanServicePL" operation="getLoanOffer" portType="ns2:LoanServicePortType" inputVariable="xkLoanServiceRequest"/>
                <receive name="ReceiveXKLoanOffer" createInstance="no" partnerLink="XKLoanServicePL" operation="onLoanOffer" portType="ns2:LoanServiceCallbackPortType" variable="xkLoanServiceResponse">
                    <correlations>
                        <correlation set="correlator" initiate="no"></correlation>
                    </correlations>
                </receive>
            </sequence-->
        </flow>
        <assign name="PrepareOutput">
            <copy>
                <from>
                    <literal>
                        <ns3:LoanOffer>
                            <ns3:ProviderName></ns3:ProviderName>
                            <ns3:selected></ns3:selected>
                            <ns3:approved></ns3:approved>
                            <ns3:AnualInterestRate></ns3:AnualInterestRate>
                            <ns3:CustomerInfo>
                                <ns3:Name></ns3:Name>
                                <ns3:Email></ns3:Email>
                                <ns3:CustomerID></ns3:CustomerID>
                                <ns3:CreditRating></ns3:CreditRating>
                            </ns3:CustomerInfo>
                        </ns3:LoanOffer>
                    </literal>
                </from>
                <to>$output.part</to>
            </copy>
        </assign>
        <!--if name="SelectLoanOffer">
            <condition>$diLoanServiceResponse.part/ns3:AnualInterestRate &lt;= $xkLoanServiceResponse.part/ns3:AnualInterestRate</condition-->
            <assign name="AssignDILoanOffer">
                <copy>
                    <from>$diLoanServiceResponse.part/ns3:ProviderName</from>
                    <to>$output.part/ns3:ProviderName</to>
                </copy>
                <copy>
                    <from>$diLoanServiceResponse.part/ns3:approved</from>
                    <to>$output.part/ns3:approved</to>
                </copy>
                <copy>
                    <from>$diLoanServiceResponse.part/ns3:AnualInterestRate</from>
                    <to>$output.part/ns3:AnualInterestRate</to>
                </copy>
                <copy>
                    <from>$diLoanServiceResponse.part/ns3:CustomerInfo</from>
                    <to>$output.part/ns3:CustomerInfo</to>
                </copy>
                <copy>
                    <from>true()</from>
                    <to>$output.part/ns3:selected</to>
                </copy>
            </assign>
            <!--else>
                <assign name="AssignXKLoanOffer">
                    <copy>
                        <from>$xkLoanServiceResponse.part/ns3:ProviderName</from>
                        <to>$output.part/ns3:ProviderName</to>
                    </copy>
                    <copy>
                        <from>$xkLoanServiceResponse.part/ns3:approved</from>
                        <to>$output.part/ns3:approved</to>
                    </copy>
                    <copy>
                        <from>$xkLoanServiceResponse.part/ns3:AnualInterestRate</from>
                        <to>$output.part/ns3:AnualInterestRate</to>
                    </copy>
                    <copy>
                        <from>$xkLoanServiceResponse.part/ns3:CustomerInfo</from>
                        <to>$output.part/ns3:CustomerInfo</to>
                    </copy>
                    <copy>
                        <from>true()</from>
                        <to>$output.part/ns3:selected</to>
                    </copy>
                </assign>
            </else-->
        <!--/if-->
        <reply name="ReplyWithOffer" partnerLink="Client" operation="laonRequest" portType="tns:LoanProcessPortType" variable="output"/>
    </sequence>
</process>

