<deploy xmlns="http://www.apache.org/ode/schemas/dd/2007/03"
	xmlns:pns="http://ode/bpel/unit-test" 
	xmlns:hell2="http://services.mashup.wso2.org/echoService"
	xmlns:wns="http://ode/bpel/unit-test.wsdl">


	<process name="pns:HelloWorld">
		<!--in-memory>true</in-memory-->
		<process-events>
      <!--enable-event>dataHandling</enable-event>
      <enable-event>correlation</enable-event>
	<enable-event>Scope Handling</enable-event>
      <enable-event>Activity Life Cycle</enable-event>
	<enable-event>dataHandling</enable-event>
      <enable-event>correlation</enable-event-->>
 </process-events>
		<!--retired>true</retired-->
		<active>true</active>
		<invoke partnerLink="echoPartnerLink">
			<service name="hell2:echoService" port="HelloServiceHttpSoap11Endpoint">
				 <endpoint xmlns="http://wso2.org/bps/bpel/endpoint/config">
            <httpOptions>
                <connection-timeout value="40"/>
                
            </httpOptions>
        </endpoint> 
			</service>
		</invoke>
		<provide partnerLink="helloPartnerLink">
			<service name="wns:HelloService" port="HelloPort">
<endpoint xmlns="http://wso2.org/bps/bpel/endpoint/config">
            <httpOptions>
                <connection-timeout value="40"/>
                
            </httpOptions>
        </endpoint> 
	</service>
		</provide>

	<!--cleanup on="success"/-->

	</process>
</deploy>
