                <module>core</module>
                <module>commons</module>
                <module>components/endpoints</module>
                <module>components/proxyservices</module>
                <module>components/sequences</module>
                <module>components/endpoints</module>
                <module>components/mediators-send</module>
                <module>components/mediators-drop</module>
                <module>components/mediators-sequence</module>
                <module>components/mediators-inout</module>
                <module>components/mediators-filter</module>
                <module>components/mediators-clone</module>
                <module>components/mediators-fault</module>
                <module>components/mediators-log</module>
                <module>components/mediators-cache</module>
                <module>components/mediators-switch</module>
                <module>components/mediators-property</module>
                <module>components/localentry</module>
                <module>components/mediators-xslt</module>
                <module>components/mediators-class</module>
                <module>components/mediators-command</module>
                <module>components/mediators-script</module>
                <module>components/mediators-spring</module>
                <module>components/mediators-rule</module>
                <module>components/mediators-iterate</module>
                <module>components/mediators-throttle</module>
                <module>components/mediators-event</module>
                <module>components/mediators-header</module>
                <module>components/mediators-aggregate</module>
                <module>components/mediators-router</module>
                <module>components/mediators-xquery</module>
                <module>components/mediators-callout</module>
                <module>components/mediators-dbLookup</module>
                <module>components/mediators-dbReport</module>
                <module>components/event-sources</module>
                <module>components/esb-sample</module>
                <module>components/mediators-smooks</module>
                <module>components/mediators-enrich</module>
                <!--module>synapse-nhttp-transport</module-->
            </modules>
        </profile>
        <profile>
            <id>product-stratos</id>
            <activation>
                <property>
                    <name>product</name>
                    <value>stratos_esb</value>
                </property>
            </activation>
            <modules>
                <module>core</module>
                <module>commons</module>
                <module>components/synapse-config-admin-service</module>
                 <module>components/mediators-inout</module>
                <module>components/mediators-filter</module>
                <module>components/mediators-clone</module>
                <module>components/mediators-property</module>
                <module>components/mediators-iterate</module>
                <module>components/mediators-aggregate</module>
                <module>components/mediators-send</module>
                <module>components/mediators-drop</module>
                <module>components/mediators-throttle</module>
                <module>components/mediators-sequence</module>
                <module>components/mediators-log</module>
                <module>components/mediators-header</module>
                <module>components/mediators-event</module>
                <module>components/mediators-router</module>
                <module>components/mediators-cache</module>
                <module>components/mediators-callout</module>
                <!--  module>mediators-enrich</module>
                <module>mediators-switch</module>
                <module>event-sources</module>-->
            </modules>
        </profile>
    </profiles>
    <repositories>
        <repository>
            <id>wso2-maven2-repository</id>
            <name>WSO2 Maven2 Repository</name>
            <url>http://dist.wso2.org/maven2</url>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
            <releases>
                <enabled>true</enabled>
                <updatePolicy>never</updatePolicy>
                <checksumPolicy>fail</checksumPolicy>
            </releases>
        </repository>
        <repository>
            <id>wso2-maven2-snapshot-repository</id>
            <name>WSO2 Maven2 Snapshot Repository</name>
            <url>http://dist.wso2.org/snapshots/maven2</url>
            <snapshots>
                <enabled>true</enabled>
                <updatePolicy>interval:60</updatePolicy>
                <checksumPolicy>ignore</checksumPolicy>
            </snapshots>
            <releases>
                <enabled>false</enabled>
            </releases>
        </repository>
    </repositories>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <configuration>
                        <source>1.5</source>
                        <target>1.5</target>
                    </configuration>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-jar-plugin</artifactId>
                    <executions>
                        <execution>
                            <goals>
                                <goal>test-jar</goal>
                            </goals>
                        </execution>
                    </executions>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-surefire-plugin</artifactId>
                    <configuration>
                        <testFailureIgnore>true</testFailureIgnore>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>
    <dependencies>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.authenticator.proxy</artifactId>
            <version>3.0.0</version>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.8.1</version>
            <scope>test</scope>
        </dependency>

    </dependencies>

</project>
