<project name="UTclient" default="run.client">

       
    <property name="base.dir" value="${project.base.dir}/rampart/sign-only/client"/>
    <property name="build.dir" value="${base.dir}/build"/>
   
    <property name="wsdl.uri" value="http://${wsas.envt.hostname}:${wsas.envt.httpport}/services/Rampart_SIGNONLY_Echo_service?wsdl"/>
    <property name="endpoint" value="https://${wsas.envt.hostname}:${wsas.envt.httpsport}/services/Rampart_SIGNONLY_Echo_service"/>

    <property name="src" value="${base.dir}/src"/>
    <property name="target" value="${base.dir}/target"/>
    <property name="target.java" value="${target}/src"/>
    <property name="target.classes" value="${target}/classes"/>
    <property name="target.stub" value="${target}/stub"/>
    <property name="client.repos.dir" value="${build.dir}/client_repositories"/>
    <property name="client.lib" value="${wsas.envt.WSAS_HOME}/repository/lib"/>
    
    <property name="modules.dir" value="${wsas.envt.WSAS_HOME}/repository/modules/"/>
    <property name="addressing.mar" value="${wsas.envt.addressing_version}"/>
    <property name="rampart.mar" value="${wsas.envt.rampart_version}"/>
    
    <path id="wsas.classpath">
        <fileset dir="${client.lib}">
            <include name="*.jar"/>
        </fileset>
    </path>
    

    <target name="gen.stub">
        <delete dir="${target}"/>
        <mkdir dir="${target}\classes"/>
        <mkdir dir="${target}\stub"/>
        <java classname="org.apache.axis2.wsdl.WSDL2Java" fork="true">
            <arg line="-uri ${wsdl.uri}"/>
            <arg line="-o ${target}"/>
            <arg line="-pn Rampart_SIGNONLY_Echo_serviceHttpSoap11Endpoint"/>
            <classpath>
                <fileset dir="${client.lib}">
                    <include name="*.jar"/>
                </fileset>
            </classpath>
        </java>
        <!--now compile the stub classes-->
        <javac debug="on" memoryMaximumSize="256m" memoryInitialSize="256m" fork="true"
               destdir="${target}/stub">
            <src path="${target}/src"/>
            <classpath>
                <fileset dir="${client.lib}">
                    <include name="*.jar"/>
                </fileset>
                <fileset dir="${wsas.envt.WSAS_HOME}/lib/endorsed">
                    <include name="*.*"/>
                </fileset>
            </classpath>
        </javac>
        
         <!--jar the compiled stuff-->
        <jar destfile="${target}/Rampart_SIGNONLY_Echo_service-stub.jar">
            <fileset dir="${target}/stub">
                <!--exclude name="**/META-INF/*.*"/-->
            </fileset>
        </jar>
    </target>
    
    <!-- Use the PWCBHandler class available in service directory -->
    
     <target name="compile.PWCBClass">
        <mkdir dir="${build.dir}/temp/src/org/wso2/wsas/security"/>
        <mkdir dir="${build.dir}/temp/classes"/>
        <copy file="${project.base.dir}/rampart/sign-only/service/src/org/wso2/wsas/security/PWCBHandler.java" tofile="${build.dir}/temp/src/org/wso2/wsas/security/PWCBHandler.java" overwrite="true"/>

        <!--First let's compile the classes-->
        <javac debug="on" 
               fork="true"
               destdir="${build.dir}/temp/classes" 
               srcdir="${build.dir}/temp/src"
               classpathref="wsas.classpath">
        </javac>
        
        <jar destfile="${target}/PWCBHandler.jar">
            <fileset dir="${build.dir}/temp/classes">
                <!--exclude name="**/META-INF/*.*"/-->
            </fileset>
        </jar>
        
    </target>
        
        
         
    <target name="run.client" depends="clean,gen.stub,compile.PWCBClass">
    
    <mkdir dir="${client.repos.dir}"/>
	 	<mkdir dir="${client.repos.dir}/modules"/>
        
       
        
        <!-- copy modules -->
	   		<copy file="${modules.dir}/${addressing.mar}" tofile="${client.repos.dir}/modules/${addressing.mar}" overwrite="true"/>
	   		<!--copy file="${modules.dir}/${rampart.mar}" tofile="${client.repos.dir}/modules/${rampart.mar}" overwrite="true"/-->
	   		
	   		 <!-- Compile the client -->
        
        <javac debug="on" memoryMaximumSize="256m" memoryInitialSize="256m" fork="true"
               destdir="${target}/classes">
            <src path="${base.dir}/src"/>
            <classpath>
                <fileset dir="${client.lib}">
                    <include name="*.jar"/>
                </fileset>
                <fileset dir="${target}">
                    <include name="*.jar"/>
                </fileset>
                <fileset dir="${wsas.envt.WSAS_HOME}/lib/endorsed">
                    <include name="*.*"/>
                </fileset>
            </classpath>
        </javac>
        
        
        
         <!--jar the compiled stuff-->
        <jar destfile="${target}/Rampart_SIGNONLY_Echo_service-client.jar">
            <fileset dir="${target}/classes">
                <!--exclude name="**/META-INF/*.*"/-->
            </fileset>
        </jar>
        
        <java classname="org.wso2.wsas.client.SignonlyClient" fork="true">
                    <arg value="${wsas.envt.WSAS_HOME}"/>
                    <arg value="${client.repos.dir}"/>
                    <arg value="${base.dir}/policy.xml"/>
                    <arg value="${endpoint}"/>
            <classpath>
                <fileset dir="${client.lib}">
                    <include name="*.jar"/>
                </fileset>
                <fileset dir="${target}">
                    <include name="*.jar"/>
                </fileset>
                <fileset dir="${wsas.envt.WSAS_HOME}/lib/endorsed">
                    <include name="*.*"/>
                </fileset>
                 <!--fileset dir="${project.base.dir}\rampart\ut-over-https\service\">
                    <include name="*.jar"/>
                </fileset-->
            </classpath>
        </java>
    </target>

   <target name="clean">
        <delete dir="${base.dir}/target"/>
        <delete dir="${build.dir}"/>
    </target>

</project>