<project name="SQL_Substring_My_At" default="run.client">

        
    <property name="base.dir" value="${project.base.dir}/SQL_Substring_My_At/client"/>
    <property name="src" value="${project.base.dir}/SQL_Substring_My_At/client/src"/>
    <property name="target" value="${project.base.dir}/SQL_Substring_My_At/client/target"/>
    <property name="endpoint.uri" value="http://${DS.envt.hostname}:${DS.envt.httpport}/services/SQL_Substring_My_At.SQL_Substring_My_AtHttpSoap11Endpoint"/>
	<property name="lib.path" value="${DS.envt.DS_HOME}"/>
    
          
         
    <target name="run.client">
        <delete dir="${target}"/>
        <mkdir dir="${target}/classes"/>
        <!-- Compile the client -->
        
        <javac debug="on" 
               destdir="${target}/classes">
            <src path="${base.dir}/src"/>
            <classpath>
               <fileset dir="${DS.envt.DS_HOME}/repository/lib">
                    <include name="*.jar"/>
                </fileset>
                <!--fileset dir="${target}">
                    <include name="*.jar"/>
                </fileset-->
                <fileset dir="${DS.envt.DS_HOME}/lib/endorsed">
                    <include name="*.*"/>
                </fileset>
            </classpath>
        </javac>
        
         <!--jar the compiled stuff-->
        <jar destfile="${target}/SQL_Substring_My_At.jar">
         <fileset dir="${target}/classes">
                <!--exclude name="**/META-INF/*.*"/-->
            </fileset>
        </jar>
        
        <java classname="org.SQL_Substring_My_At_Client" fork="true">
        <jvmarg value="-Xmx1024m"/>
        <arg value="${endpoint.uri}"/>
            <classpath>
               <fileset dir="${DS.envt.DS_HOME}/repository/lib">
                    <include name="*.jar"/>
                </fileset>
                <fileset dir="${target}">
                    <include name="*.jar"/>
                </fileset>
                <fileset dir="${DS.envt.DS_HOME}/lib/endorsed">
                    <include name="*.*"/>
                </fileset>
            </classpath>
        </java>
    </target>

   
</project>
