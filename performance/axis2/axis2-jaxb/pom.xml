    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>generate-sources</phase>
                        <configuration>
                            <tasks>
                                <!--<taskdef name="codegen"
                                         classname="org.apache.axis2.tool.ant.AntCodegenTask"
                                         classpathref="maven.compile.classpath"/>
                                <codegen
                                        wsdlfilename="${basedir}/src/webapp/WEB-INF/services/Benchmark/META-INF/Benchmark.wsdl"
                                        databindingname="adb"
                                        serversideinterface="true"
                                        packagename="edu.indiana.extreme.www.wsdl.benchmark1"
                                        output="${basedir}/target/generated-source"
                                        serverside="true"/>-->
                                <java classname="org.apache.axis2.wsdl.WSDL2Java" fork="true">
                                    <classpath refid="maven.compile.classpath"/>
                                    <arg line=" -o ${basedir}/target/generated-source -sp -ss -sd -ssi -d jaxbri -p edu.indiana.extreme.www.wsdl.benchmark1 -uri ${basedir}/src/webapp/WEB-INF/services/Benchmark/META-INF/Benchmark.wsdl"/>
                                </java>
                                <copy tofile="${basedir}/target/generated-source/src/edu/indiana/extreme/www/wsdl/benchmark1/BenchmarkSkeleton.java"
                                      file="${basedir}/src/edu/indiana/extreme/www/wsdl/benchmark1/BenchmarkSkeleton.java"
                                      overwrite="true"/>
                            </tasks>
                            <sourceRoot>
                                ${project.build.directory}/generated-source/src
                            </sourceRoot>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.5</source>
                    <target>1.5</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <configuration>
                    <warSourceDirectory>${basedir}/src/webapp</warSourceDirectory>
                </configuration>
            </plugin>
        </plugins>
        <sourceDirectory>src/main</sourceDirectory>
        <testSourceDirectory>src/test</testSourceDirectory>
        <resources>
            <resource>
                <directory>src/main</directory>
                <includes>
                    <include>**/*.xml</include>
                </includes>
            </resource>
        </resources>
        <testResources>
            <testResource>
                <directory>src/test</directory>
                <includes>
                    <include>**/*.xml</include>
                    <include>**/*.properties</include>
                    <include>**/*.wsdl</include>
                </includes>
            </testResource>
        </testResources>
    </build>

